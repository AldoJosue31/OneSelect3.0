<%- include("template/head", {tituloweb: "pagina de Inicio"}) %>
<%- include("template/sidebar") %>
<div class="container bg-dark text-light" style="margin-left: 60px;">
    <div class="row">
        <div class="col">
            <form id="frmNuevoRegistro" class="border border-light p-4"  style="min-height: 80vh; background: rgb(33,37,41);
            background: linear-gradient(90deg, rgba(33,37,41,1) 0%, rgba(38,43,47,1) 16%, rgba(38,43,47,1) 86%, rgba(33,37,41,1) 100%); --bs-border-opacity: .25;"">
                <button class="btn float-end text-light" onclick="dividirRegistros()"><i class='bx bx-windows'></i></button>
                <div class="col">
                    <p class="h3 mb-4 text-center" id="TITULOS">Importes</p> <button type="button" class="btn float-end text-light btn-success btn-sm mb-4"  data-bs-toggle="modal" data-bs-target="#CrearImporte">Agregar</button>
                    <table class="table w-100">
                        <thead>
                            <tr>
                                <th class="text-light">Fecha de creacion</th>
                                <th class="text-light">Hora de creacion</th>
                                <th class="text-light">Nombres</th>
                                <th class="text-light">Apellidos</th>
                                <th class="text-light">Importe</th>
                                <th class="text-light">Total</th>
                                <th class="text-light">Acciones</th>
                            </tr>
                        </thead>
                        <tbody id="importes">

                        </tbody>
                        
                    </table>

                </div>
                
            </form>
        </div>
    </div>
</div>
  <!-- Modal -->
  <div class="modal fade" id="CrearImporte" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content bg-dark text-light  border-light border">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">Crear un producto</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form class="mt-4" id="frmNuevoProducto">

                <div class="form-outline mb-2 form-floating mt-3" >
                  <input type="number" id="precio" class="form-control mb-4 bg-dark text-light focus-light" placeholder="Precio" required/>
                  <label for="floatingInputInvalid">Precio</label>
                 </div>
        
                 <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button id="btnCrearProducto"  type="submit" class="btn btn-success">Crear</button>
                  </div>

              </form>
        </div>
 
      </div>
    </div>
    
  </div>

<%- include("template/footer") %>